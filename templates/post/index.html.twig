{% extends './dash/index.html.twig' %}
{# {% set name = ({{ user.name }} {{ user.surname }})  %} #}

{% block body %}
	<div class="post-container">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<h3>Your posts</h3>

		<table class="table table-striped table-hover table-light">
			<thead>
				<tr>
					<td>Title</td>
					<td>Date</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				{% for post in posts %}
					<tr>
						<td>
							<a href="{{ path('dashshow', {id: post.id}) }}">
								<h5 style="margin-top: 6px;">{{ post.title }}</h5>
							</a>
						</td>
						<td>
							<h5 style="margin-top: 6px;">{{ post.date|date("m/d/Y") }}</h5>
						</td>
						<td>
							<a href='{{ path('dashdelete', {id: post.id}) }}'>
								<button class="btn btn-danger">Delete</button>
							</a>
							{# <a href='{{ path('', {id: post.id}) }}'>
																						<button class="btn btn-dark">Edit</button>
																					</a> #}

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
